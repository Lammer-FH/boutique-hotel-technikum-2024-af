{
  "openapi": "3.0.0",
  "info": {
    "title": "HotelBookingAPI",
    "description": "API for managing hotel bookings and room availability",
    "version": "v1"
  },
  "servers": [
    {
      "url": "/api/"
    }
  ],
  "paths": {
    "/v1/rooms": {
      "get": {
        "summary": "Returns all rooms",
        "responses": {
          "200": {
            "description": "Successfully retrieved all rooms",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "roomid": {
                        "type": "integer"
                      },
                      "title": {
                        "type": "string"
                      },
                      "description": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Rooms not found"
          }
        }
      }
    },
    "/v1/rooms/{id}": {
      "get": {
        "summary": "Returns a room by id",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "ID of the room to retrieve"
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully retrieved the room",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "roomid": {
                      "type": "integer"
                    },
                    "title": {
                      "type": "string"
                    },
                    "description": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Room not found"
          }
        }
      }
    },
    "/v1/rooms/{id}/availability": {
      "get": {
        "summary": "Checks room availability by id and filter",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "ID of the room to check availability"
          },
          {
            "in": "query",
            "name": "filter",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Filter to check room availability in JSON format"
          }
        ],
        "responses": {
          "200": {
            "description": "Room is available"
          },
          "404": {
            "description": "Room is not available"
          }
        }
      }
    },
    "/v1/bookings": {
      "post": {
        "summary": "Creates a new booking",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "surname": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "breakfast": {
                    "type": "boolean"
                  },
                  "startDate": {
                    "type": "string",
                    "format": "date"
                  },
                  "duration": {
                    "type": "integer"
                  },
                  "roomSelection": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Booking successfully created"
          },
          "404": {
            "description": "Booking creation failed"
          }
        }
      }
    },
    "/v1/bookings/{id}": {
      "put": {
        "summary": "Updates a booking",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "ID of the booking to update"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "surname": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "breakfast": {
                    "type": "boolean"
                  },
                  "startDate": {
                    "type": "string",
                    "format": "date"
                  },
                  "duration": {
                    "type": "integer"
                  },
                  "roomSelection": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Booking successfully updated"
          },
          "404": {
            "description": "Booking update failed"
          }
        }
      },
      "delete": {
        "summary": "Deletes a booking",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "ID of the booking to delete"
          }
        ],
        "responses": {
          "200": {
            "description": "Booking successfully deleted"
          },
          "404": {
            "description": "Booking deletion failed"
          }
        }
      }
    }
  }
}